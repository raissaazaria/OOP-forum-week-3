package com.company;

import java.util.Scanner; //to input the scanner function into the program

public class temperature {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in); //creating input for user to enter number using scanner
        System.out.print("Input a degree in Celcius: "); // system will print out text
        double Celcius = input.nextDouble(); // creating new prompt

        double Farenheit = ((Celcius * 9 / 5) + 32); //enter formula
        System.out.println(Celcius + " Celcius degrees are " + Farenheit + "Farenheit degrees ");
    }
}
